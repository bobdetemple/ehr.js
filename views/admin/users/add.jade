extends ../../layouts/main

block main-content
    .page-header
      h1 Admin <small>Add User</small>
    form(method='POST')
      p First Name
      input.form-control(type='text', placeholder='First Name', name='firstName')
      p Last Name
      input.form-control(type='text', placeholder='Last Name', name='lastName')
      p Username
      input.form-control(type='text', placeholder='Username', name='username')
      p Password
      input.form-control(type='password', placeholder='Password', name='password')
      button.btn.btn-primary(type='submit') Add

    